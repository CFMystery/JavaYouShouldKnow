<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/aop
        http://www.springframework.org/schema/aop/spring-aop-3.0.xsd"
       default-autowire="byName">

    <!-- auto register mobile service to spring context -->

    <aop:aspectj-autoproxy/>
    <!--<context:component-scan base-package="com.alipay.boot.test.aop" />-->
    <!--<context:annotation-config />-->

    <bean id="testService" class="cn.fanhub.javayoushouldknow.spring.bean.impl.TestServiceImpl" ></bean>
    <bean id="useCglibAspect" class="cn.fanhub.javayoushouldknow.spring.aop.cglibProblem.UseCglibAspect"/>

    <aop:config proxy-target-class="true">
        <aop:aspect id="aop" ref="useCglibAspect">
            <aop:pointcut id="test" expression="execution(* cn.fanhub.javayoushouldknow.spring.bean.impl.*.*(..))" />
            <aop:before pointcut-ref="test" method="before"/>
        </aop:aspect>
    </aop:config>

</beans>